@model aplicacao_asp.net_mvc.Models.Tipo

@{
    ViewData["Title"] = "Create Tipo";
}

<h1>Criar Tipo</h1>

<h4></h4>
<hr />

<!-- Estilo retrÃ´ rosa/bege -->
<style>
    body {
        background: linear-gradient(135deg, #FDE2E2, #FFF3E2);
        font-family: 'Courier New', Courier, monospace;
        color: #4A1C40;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #B84C70;
    }

    .form-container {
        background-color: rgba(255, 240, 230, 0.9);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 3px 3px 8px rgba(0,0,0,0.1);
        max-width: 500px;
        margin: 0 auto;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-create, .btn-primary {
        display: inline-block;
        margin-top: 15px;
        padding: 8px 15px;
        background-color: #F7C8D0;
        color: #4A1C40;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        border: none;
    }

    .btn-create:hover, .btn-primary:hover {
        background-color: #B84C70;
        color: white;
    }

    a {
        text-decoration: none;
        color: #B84C70;
    }

    a:hover {
        color: #83304B;
    }
</style>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>

    <div style="margin-top: 15px;">
        <a class="btn-create" asp-action="Index">
            <i class="bi bi-arrow-left-square"></i> Voltar para Lista
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
