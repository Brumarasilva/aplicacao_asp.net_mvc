@model aplicacao_asp.net_mvc.Models.Tipo

@{
    ViewData["Title"] = "Edit";
}

<!-- Estilo retrÃ´ rosa/bege -->
<style>
    body {
        background: linear-gradient(135deg, #FDE2E2, #FFF3E2);
        font-family: 'Courier New', Courier, monospace;
        color: #4A1C40;
    }

    h1, h4 {
        color: #B84C70;
        text-align: center;
    }

    hr {
        border-top: 2px solid #F7C8D0;
        max-width: 600px;
        margin: 10px auto 20px auto;
    }

    .form-retro {
        max-width: 600px;
        margin: 0 auto;
    }

    .form-group label {
        font-weight: bold;
        color: #4A1C40;
    }

    .form-control {
        background-color: #FFE9D6;
        border: 1px solid #F7C8D0;
        border-radius: 5px;
        color: #4A1C40;
        padding: 8px 12px;
    }

    .btn-save {
        background-color: #F7C8D0;
        border-color: #F7C8D0;
        color: #4A1C40;
        font-weight: bold;
        border-radius: 5px;
        padding: 8px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-right: 10px;
        border: none;
        display: inline-block;
        text-align: center;
    }

    .btn-save:hover {
        background-color: #B84C70;
        border-color: #B84C70;
        color: white;
    }

    .btn-back {
        color: #B84C70;
        text-decoration: none;
        font-weight: bold;
        padding: 8px 15px;
        border: 1px solid transparent;
        border-radius: 5px;
        transition: color 0.3s ease, border-color 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-back:hover {
        color: #83304B;
        border-color: #83304B;
        text-decoration: none;
    }

    .text-danger {
        font-family: 'Courier New', monospace;
    }
</style>

<h1></h1>
<h4></h4>
<hr />

<div class="form-retro">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group mt-3 text-center">
            <input type="submit" value="Salvar" class="btn-save" />
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left-square"></i> Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
