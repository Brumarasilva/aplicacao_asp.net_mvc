@model aplicacao_asp.net_mvc.Models.Tipo

@{
    ViewData["Title"] = "Delete Tipo";
}

<h1></h1>

<h3></h3>

<!-- Estilo retrÃ´ rosa/bege -->
<style>
    body {
        background: linear-gradient(135deg, #FDE2E2, #FFF3E2);
        font-family: 'Courier New', Courier, monospace;
        color: #4A1C40;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #B84C70;
    }

    h3 {
        text-align: center;
        margin-bottom: 30px;
        color: #83304B;
    }

    .details-container {
        background-color: rgba(255, 240, 230, 0.9);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 3px 3px 8px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .btn-danger {
        background-color: #B84C70;
        color: white;
        border-radius: 5px;
        border: none;
        padding: 8px 15px;
        font-weight: bold;
    }

    .btn-danger:hover {
        background-color: #83304B;
    }

    .btn-back {
        display: inline-block;
        margin-left: 10px;
        padding: 8px 15px;
        background-color: #F7C8D0;
        color: #4A1C40;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-back:hover {
        background-color: #B84C70;
        color: white;
    }

    dt {
        font-weight: bold;
    }
</style>

<div class="details-container">
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn-danger" />
        <a class="btn-back" asp-action="Index">
            <i class="bi bi-arrow-left-square"></i> Voltar para Lista
        </a>
    </form>
</div>
