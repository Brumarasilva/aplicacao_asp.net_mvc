@model aplicacao_asp.net_mvc.Models.Tarefa

@{
    ViewData["Title"] = "Details";
}

<!-- Estilo retrô rosa/bege -->
<style>
    body {
        background: linear-gradient(135deg, #FDE2E2, #FFF3E2);
        font-family: 'Courier New', Courier, monospace;
        color: #4A1C40;
    }

    h1, h4 {
        color: #B84C70;
        text-align: center;
    }

    hr {
        border-top: 2px solid #F7C8D0;
    }

    dt {
        font-weight: bold;
        color: #4A1C40;
    }

    dl.row {
        max-width: 600px;
        margin: 0 auto;
    }

    dt.col-sm-2 {
        text-align: right;
        padding-right: 15px;
    }

    dd.col-sm-10 {
        padding-left: 15px;
        margin-bottom: 10px;
        word-wrap: break-word;
    }

    a {
        color: #B84C70;
        text-decoration: none;
        font-weight: bold;
        margin: 0 8px;
    }

    a:hover {
        color: #83304B;
        text-decoration: underline;
    }

    /* Estrela para mostrar Importante */
    .star-icon {
        font-size: 24px;
        color: #B84C70;
        user-select: none;
        margin-right: 8px;
        vertical-align: middle;
    }
    .star-icon.active {
        color: #83304B;
    }

    /* Wrapper para nome + estrela */
    .star-label-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

    .text-center {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h1></h1>

<div class="star-label-wrapper">
    <span class="star-icon @(Model.Importante ? "active" : "")">@(Model.Importante ? "★" : "☆")</span>
    <h4>@Model.Nome</h4>
</div>

<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Descricao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Descricao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataCriacao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataCriacao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataConclusao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataConclusao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Tipo)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Tipo.Descricao)
    </dd>
</dl>

<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar para a lista</a>
</div>
