@model aplicacao_asp.net_mvc.Models.Tarefa

@{
    ViewData["Title"] = "Create";
}

<!-- Estilo retrÃ´ rosa/bege -->
<style>
    body {
        background: linear-gradient(135deg, #FDE2E2, #FFF3E2);
        font-family: 'Courier New', Courier, monospace;
        color: #4A1C40;
    }

    h1, h4 {
        color: #B84C70;
        text-align: center;
    }

    hr {
        border-top: 2px solid #F7C8D0;
    }

    .form-group label {
        font-weight: bold;
        color: #4A1C40;
    }

    .form-control {
        background-color: #FFE9D6;
        border: 1px solid #F7C8D0;
        border-radius: 5px;
        color: #4A1C40;
    }

    .btn-primary {
        background-color: #F7C8D0;
        border-color: #F7C8D0;
        color: #4A1C40;
        font-weight: bold;
        border-radius: 5px;
        padding: 8px 15px;
    }

    .btn-primary:hover {
        background-color: #B84C70;
        border-color: #B84C70;
        color: white;
    }

    a {
        color: #B84C70;
        text-decoration: none;
    }

    a:hover {
        color: #83304B;
        text-decoration: underline;
    }
</style>

<h1>Create</h1>
<h4>Tarefa</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DataConclusao" class="control-label"></label>
                <input asp-for="DataConclusao" class="form-control" />
                <span asp-validation-for="DataConclusao" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="TipoId" class="control-label"></label>
                <select asp-for="TipoId" class="form-control" asp-items="ViewBag.TipoId"></select>
            </div>
            
            <div class="form-group text-center mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
