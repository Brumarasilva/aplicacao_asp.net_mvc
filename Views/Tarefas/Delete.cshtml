@model aplicacao_asp.net_mvc.Models.Tarefa

@{
    ViewData["Title"] = "Delete";
}

<!-- Estilo retrô rosa/bege -->
<style>
    body {
        background: linear-gradient(135deg, #FDE2E2, #FFF3E2);
        font-family: 'Courier New', Courier, monospace;
        color: #4A1C40;
    }

    h1, h4 {
        color: #B84C70;
        text-align: center;
    }

    hr {
        border-top: 2px solid #F7C8D0;
    }

    .form-group label, dt {
        font-weight: bold;
        color: #4A1C40;
    }

    .form-control, .form-control[readonly] {
        background-color: #FFE9D6;
        border: 1px solid #F7C8D0;
        border-radius: 5px;
        color: #4A1C40;
    }

    .btn-danger {
        background-color: #B84C70;
        border-color: #B84C70;
        color: white;
        font-weight: bold;
        border-radius: 5px;
        padding: 8px 15px;
        margin-right: 10px;
    }

    .btn-danger:hover {
        background-color: #83304B;
        border-color: #83304B;
        color: white;
    }

    a {
        color: #B84C70;
        text-decoration: none;
        font-weight: bold;
    }

    a:hover {
        color: #83304B;
        text-decoration: underline;
    }

    /* Estrela para favoritar */
    .star-icon {
        font-size: 24px;
        color: #B84C70;
        user-select: none;
        margin-right: 8px;
        vertical-align: middle;
    }
    
    .star-icon.active {
        color: #83304B;
    }

    /* Ajuste para label e input Nome com estrela */
    .star-label-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

    dl.row {
        max-width: 600px;
        margin: 0 auto;
    }

    dt.col-sm-2 {
        text-align: right;
        padding-right: 15px;
    }

    dd.col-sm-10 {
        padding-left: 15px;
        margin-bottom: 10px;
        word-wrap: break-word;
    }

    .text-center {
        text-align: center;
    }
</style>

<h1></h1>
<h4></h4>
<hr />

<div class="star-label-wrapper">
    <span class="star-icon @(Model.Importante ? "active" : "")">@(Model.Importante ? "★" : "☆")</span>
    <h4>@Model.Nome</h4>
</div>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Descricao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Descricao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataCriacao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataCriacao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataConclusao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataConclusao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Tipo)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Tipo.Descricao)
    </dd>
</dl>

<div class="text-center mt-4">
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>
